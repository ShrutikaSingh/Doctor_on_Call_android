<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".DateSelectorForEpidemicMap">

    <TextView
        android:id="@+id/headingtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Select Date"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/headingtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Select Date From: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn_dateFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="setDateFrom"
        android:padding="15dp"
        android:text="From" />

    <TextView
        android:id="@+id/datefrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_dateFrom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="date_selected"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/datefrom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Select Date To: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn_dateTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="setDateTo"
        android:padding="15dp"
        android:text="To" />

    <TextView
        android:id="@+id/dateto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_dateTo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="date_selected"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:onClick="search"
        android:padding="20dp"
        android:text="SEARCH" />

</RelativeLayout>